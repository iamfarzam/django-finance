# Django Finance - Environment Configuration
# Copy this file to .env and update values for your environment
# NEVER commit .env to version control

# =============================================================================
# Django Core
# =============================================================================
# Set to false in production
DEBUG=true

# Generate a secure key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-change-in-production

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/django_finance

# =============================================================================
# Redis (Cache + Celery Broker)
# =============================================================================
# Format: redis://host:port/db
REDIS_URL=redis://localhost:6379/0

# Separate cache URL (optional, defaults to REDIS_URL)
# CACHE_URL=redis://localhost:6379/1

# =============================================================================
# JWT Authentication
# =============================================================================
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Token lifetimes
JWT_ACCESS_LIFETIME_MINUTES=15
JWT_REFRESH_LIFETIME_DAYS=7

# =============================================================================
# Email
# =============================================================================
# Backend options:
# - django.core.mail.backends.console.EmailBackend (development)
# - django.core.mail.backends.smtp.EmailBackend (production)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP settings (required for smtp backend)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Default from address
DEFAULT_FROM_EMAIL=noreply@example.com

# =============================================================================
# Security
# =============================================================================
# CSRF trusted origins (comma-separated)
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# CORS allowed origins (comma-separated, for API access from different domains)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# =============================================================================
# Observability
# =============================================================================
# Sentry DSN (leave empty to disable)
SENTRY_DSN=

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# Celery
# =============================================================================
# Broker URL (defaults to REDIS_URL if not set)
# CELERY_BROKER_URL=redis://localhost:6379/0

# Result backend (defaults to REDIS_URL if not set)
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# Feature Flags
# =============================================================================
FEATURE_MFA_ENABLED=false

# =============================================================================
# Development Only
# =============================================================================
# Django Debug Toolbar
ENABLE_DEBUG_TOOLBAR=true
